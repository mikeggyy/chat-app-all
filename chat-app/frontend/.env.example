VITE_API_URL=http://localhost:4000

# Firebase web app configuration
# 請從 Firebase Console 獲取這些值：https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
# Optional services
# Uncomment and provide values only if the related Firebase service is needed.
# VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id
# VITE_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
# VITE_FIREBASE_VAPID_KEY=your-web-push-certificate-keypair

# 開發環境購買功能繞過（Development Purchase Bypass）
# ⚠️ 設置為 true 時，前端會顯示開發模式標記
# ⚠️ 正式環境必須設置為 false 或完全移除此設定
# true = 開發模式（繞過實際支付流程）
# false = 正式環境（需要實際支付）
VITE_ENABLE_DEV_PURCHASE_BYPASS=true
