# Admin Backend Environment Variables

# Server Configuration
PORT=4001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5174

# 主應用 API URL（用於獲取語音列表等共享資源）
MAIN_APP_API_URL=http://localhost:4000

# Firebase Admin SDK
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Firebase Emulator (開發環境)
USE_FIREBASE_EMULATOR=true
FIREBASE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_HOST=localhost:8180

# Cloudflare R2 Storage (圖片存儲)
# 注意：這些配置需要與主應用 (chat-app) 保持一致
R2_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=https://<YOUR_CUSTOM_DOMAIN>
