# ============================================
# Cloud Run 環境變數配置範本
# 請填寫以下所有必要的環境變數
# 然後使用 gcloud 命令部署
# ============================================

# 伺服器配置
NODE_ENV=production
PORT=8080
CORS_ORIGIN=https://your-frontend-url.pages.dev

# Firebase Admin SDK
FIREBASE_ADMIN_PROJECT_ID=chat-app-3-8a7ee
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@chat-app-3-8a7ee.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_STORAGE_BUCKET=chat-app-3-8a7ee.appspot.com
USE_FIREBASE_EMULATOR=false

# AI 服務 API Keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_AI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cloudflare R2 Storage（圖片和影片儲存）
R2_ENDPOINT=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
R2_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
R2_BUCKET_NAME=chat-app-media
R2_PUBLIC_URL=https://media.your-domain.com

# 影片生成配置
VIDEO_GENERATION_PROVIDER=hailuo
# 選項: hailuo (推薦), replicate, veo
# 如果選擇 veo，還需要以下配置:
# GOOGLE_CLOUD_PROJECT_ID=chat-app-3-8a7ee
# GOOGLE_CLOUD_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# VEO_ENABLE_RETRY=true
# VEO_MAX_RETRIES=3

# TTS 服務配置（可選）
USE_GOOGLE_TTS=false
# 如果設置為 true，需要 GOOGLE_CLOUD_PROJECT_ID 和 GOOGLE_CLOUD_LOCATION

# 開發環境配置（生產環境請勿啟用）
# ENABLE_DEV_PURCHASE_BYPASS=false
# ENABLE_TEST_ACCOUNTS_IN_PROD=false
